<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FixMyActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/splash_bg" />

        <View
            android:id="@+id/overlay_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".5"
            android:background="@color/grey" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_marginTop="50sp"
            android:alpha=".7"
            android:src="@drawable/logo"
            android:visibility="gone" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"

                    android:singleLine="true"
                    android:text="FIX MY RIDE"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/white"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="2sp"
                        android:layout_marginRight="20sp"
                        android:layout_marginBottom="2sp"
                        android:background="@drawable/round_edit_text">

                        <EditText
                            android:id="@+id/tv_car_makr"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:background="@null"
                            android:gravity="center"
                            android:inputType="text"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="Car Make"
                            android:textColor="@android:color/white"
                            android:textColorHint="@color/white" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="2sp"
                        android:layout_marginRight="20sp"
                        android:layout_marginBottom="2sp"
                        android:background="@drawable/round_edit_text">

                        <EditText
                            android:id="@+id/tv_car_model"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:background="@null"
                            android:gravity="center"
                            android:inputType="text"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="Car Model"
                            android:textColor="@android:color/white"
                            android:textColorHint="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="2sp"
                        android:layout_marginRight="20sp"
                        android:layout_marginBottom="2sp"
                        android:background="@drawable/round_edit_text">

                        <EditText
                            android:id="@+id/tv_car_year"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:background="@null"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLines="4"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="Car Year"
                            android:textColor="@android:color/white"
                            android:textColorHint="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="2sp"
                        android:layout_marginRight="20sp"
                        android:layout_marginBottom="2sp"
                        android:background="@drawable/round_edit_text">

                        <EditText
                            android:id="@+id/et_budget"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:background="@null"
                            android:gravity="center"
                            android:hint="Enter your Budget here"
                            android:inputType="number"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="@android:color/white"
                            android:textColorHint="@color/white"
                            android:textCursorDrawable="@drawable/color_cursor_white" />

                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/rdgrp"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/our_side"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:buttonTint="@color/white"
                            android:text="Out Side"
                            android:textColor="@android:color/white" />

                        <RadioButton
                            android:id="@+id/in_side"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:buttonTint="@color/white"
                            android:text="In Side"
                            android:textColor="@android:color/white" />

                    </RadioGroup>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="2sp"
                        android:layout_marginRight="20sp"
                        android:layout_marginBottom="2sp"
                        android:background="@drawable/round_edit_text"
                        android:paddingRight="5sp">

                        <EditText
                            android:id="@+id/et_location"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center"
                            android:hint="Add Location"
                            android:inputType="text"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="@android:color/white"
                            android:textColorHint="@color/white"
                            android:textCursorDrawable="@drawable/color_cursor_white" />

                        <ImageView
                            android:id="@+id/img_location"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center"
                            android:background="@drawable/on_click_btn"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_location" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="2sp"
                        android:layout_marginRight="20sp"
                        android:layout_marginBottom="2sp"
                        android:background="@drawable/round_edit_text">

                        <EditText
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:background="@null"
                            android:gravity="center"
                            android:hint="Description"
                            android:inputType="text"
                            android:padding="5dp"
                            android:textColor="@android:color/white"
                            android:textColorHint="@color/white"
                            android:textCursorDrawable="@drawable/color_cursor_white" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="200sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="30sp"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/img_item"
                            android:layout_width="match_parent"
                            android:layout_height="180sp"
                            android:background="#FFFFFF"
                            android:src="@drawable/ic_add_photo" />
                    </androidx.cardview.widget.CardView>

                    <Button
                        android:id="@+id/btn_Next"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/on_click_btn"
                        android:text="Next"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </FrameLayout>

</LinearLayout>