<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/splash_bg" />

        <View
            android:id="@+id/overlay_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".5"
            android:background="@color/grey" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_marginTop="50sp"
            android:alpha=".7"
            android:src="@drawable/logo"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:background="@null"
            android:gravity="center"
            android:padding="5sp"
            android:singleLine="true"
            android:text="SIGN UP"
            android:textColor="@android:color/white"
            android:textColorHint="@color/white"
            android:textSize="40sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:background="@null"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="User: "
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:background="@null"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Mechanic"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="2sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="2sp"
                android:background="@drawable/round_edit_text">

                <EditText
                    android:id="@+id/et_dis"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:background="@null"
                    android:drawableLeft="@drawable/ic_user"
                    android:gravity="center"
                    android:hint="User name"
                    android:inputType="text|textCapWords"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/light_grey"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="2sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="2sp"
                android:background="@drawable/round_edit_text">

                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:background="@null"
                    android:drawableLeft="@drawable/ic_key"
                    android:gravity="center"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/light_grey"
                    android:textCursorDrawable="@drawable/color_cursor_white"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="2sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="2sp"
                android:background="@drawable/round_edit_text">

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:background="@null"
                    android:drawableLeft="@drawable/ic_email_white"
                    android:gravity="center"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/light_grey"
                    android:textCursorDrawable="@drawable/color_cursor_white"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="2sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="2sp"
                android:background="@drawable/round_edit_text">

                <EditText
                    android:id="@+id/et_number"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:background="@null"

                    android:drawableLeft="@drawable/ic_iphone"
                    android:gravity="center"
                    android:hint="Phone number"
                    android:inputType="number"
                    android:maxLength="11"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/light_grey"
                    android:textCursorDrawable="@drawable/color_cursor_white"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="2sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="2sp"
                android:background="@drawable/round_edit_text">

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:drawableLeft="@drawable/ic_gender"
                    android:drawableRight="@drawable/ic_arrow_drop"
                    android:foreground="?android:selectableItemBackground"
                    android:gravity="center"
                    android:hint="Gender"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/light_grey"
                    android:textCursorDrawable="@drawable/color_cursor_white"
                    android:textSize="18sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_sign_up"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/on_click_btn"
                android:foreground="?android:selectableItemBackground"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </FrameLayout>

</LinearLayout>