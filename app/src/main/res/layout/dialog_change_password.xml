<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:background="@color/purple_500">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:paddingLeft="20dp"
            android:text="Change Password"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnclose"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="right"
            android:layout_marginRight="7dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/img_cancel" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10sp">

        <EditText
            android:id="@+id/tv_old_pwd"
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:layout_margin="5sp"
            android:background="@drawable/round_edit_text_black"
            android:enabled="false"
            android:hint="Old Password"
            android:inputType="textPassword"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textColorHint="@color/grey" />

        <EditText
            android:id="@+id/tv_new_pwd"
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:layout_margin="5sp"
            android:background="@drawable/round_edit_text_black"
            android:hint="New Password"
            android:inputType="textPassword"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textColorHint="@color/grey" />

        <EditText
            android:id="@+id/tv_new_confirm_pwd"
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:layout_margin="5sp"
            android:background="@drawable/round_edit_text_black"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textColorHint="@color/grey" />

        <Button
            android:id="@+id/btn_Change"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="200dp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:background="@drawable/on_click_btn"
            android:text="Change"
            android:textAllCaps="false"

            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>